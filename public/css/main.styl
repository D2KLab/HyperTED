.button-cont
  text-align: right
  clear: both
  margin-bottom: 15px
#sub-cont
  clear: both
.sub-text
  border: 1px solid $light_gray
  background-color: $light_gray
  margin: 5px 0
  height: 750px
  position: relative
  overflow: auto
  resize: vertical
  font-weight: 400
  @media (max-height: 568px)
    height: 275px
  p
    font-size: 0.9em
    line-height: 1.8em
    margin: 0
    padding: 0 10px
    transition font-weight 100ms
    cursor: pointer
    &:hover
      font-weight: 700
    &:before
      content: ""
      width: 8px
      display: inline-block
    &.selected-frag
      background-color: #ffffff
    &.now-playing
      font-style: italic
      &:before
        content: '\2022'
        font-family: "Helvetica Neue", Arial, Helvetica, sans-serif
        font-size: larger
        font-weight: 700
        line-height: 1em
        color: $dark_red
  .subChapGroup
    border-bottom: 1px solid $medium_gray
    margin-bottom: 5px
    &:hover
      font-weight: 700
    .chap-title
      text-align: right
      font-weight: 700
