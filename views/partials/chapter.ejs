<div class="container-fluid">

    <div class="row">

        <% var chapterList = videoInfo.chapters; %>
        <% function labelTime(time) {
            if (time < 60) {
                return "00:00:" + Math.floor(time);
            } else if (time == 60 || time > 60 && time < 3600) {
                return "00:" + Math.floor(time / 60) + ":" + Math.floor(time % 60);
            } else if (time == 3600 || time > 3600) {
                return Math.floor(time / 3600) + ":" + Math.floor((time % 3600) / 60) + ":" + Math.floor((time % 3600) % 60);
            }

        } %>

        <div class="col-md-2">
            <div class="chap-label">
                <h3>chapters<span class="glyphicon glyphicon-chevron-right"></span></h3>
            </div>
        </div>

        <div class="col-md-10">

            <div class="chap-line">
                <%
                chapterList.forEach(function(chap){
                    var startTime = chap.tStart.value;
                    var endTime = chap.tEnd.value;
                    var tStart = labelTime(startTime);
                    var tEnd = labelTime(endTime);
                %>
                <div class="chap-link" data-width>
                    <div class="chap-timing">
                        <p><%= tStart %> - <%= tEnd %></p>
                    </div>
                </div>
                <% }) %>
            </div>

        </div>
    </div>
</div>