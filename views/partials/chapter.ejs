<div class="container-fluid">


    <div class="chap-label">
        <span class="glyphicon glyphicon-chevron-left"></span>

        <h1>chapters</h1>
        <span class="glyphicon glyphicon-chevron-right"></span>
    </div>

    <div class="row">
        <% var chapterList = chapters; %>
        <% function labelTime(time) {
            return (time < 60) ? "00:00:" + Math.floor(time) : (time == 60 || time > 60 && time < 3600) ? "00:" + Math.floor(time / 60) + ":" + Math.floor(time % 60) : Math.floor(time / 3600) + ":" + Math.floor((time % 3600) / 60) + ":" + Math.floor((time % 3600) % 60);
        } %>
        <div class="col-md-12">

        <div class="chap-line">
                <%
                chapterList.forEach(function(chap){
                    var startTime = chap.tStart.value;
                    var endTime = chap.tEnd.value;
                    var tStart = labelTime(startTime);
                    var tEnd = labelTime(endTime);
                %>
                <div class="chap-link">
                    <a data-start-time="<%= startTime %>" data-end-time="<%= endTime %>">

                        <div class="chap-timing">

                            <h5><span class="glyphicon glyphicon-chevron-left"></span>
                                <%= tStart %> - <%= tEnd %>

                                <span class="glyphicon glyphicon-chevron-right"></span></h5>

                        </div>


                    </a>
                </div>
                <% }) %>
            </div>

        </div>
    </div>
</div>